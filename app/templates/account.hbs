<h1>Create account</h1>

{{#if errors.length}}
<div class="validation-errors">
  {{#each errors as |error|}}
    <b>{{error.fieldName}}</b> - {{error.message}}<br/>
  {{/each}}
  <i class="close-button" {{action "closeErrors"}}>+</i>
</div>
{{/if}}

<div class="sign-up-form">
  <form {{action "submitForm" on="submit"}}>
    <div class="form-input">
      <label for="name">Name</label>
      {{input name="name" type="text" value=model.name}}
    </div>
    <div class="form-input">
      <label for="name">Email</label>
      {{input name="email" type="text" value=model.email}}
    </div>
    <div class="form-input">
      <label for="name">Password1</label>
      {{input name="password1" type="password" value=model.password1}}
    </div>
    <div class="form-input">
      <label for="name">Password2</label>
      {{input name="password2" type="password" value=model.password2}}
    </div>
    <button
      class="btn"
      type="submit"
    >
      Submit
    </button>
  </form>
</div>

<div class="cross-links">
  {{link-to "Go to home" "platform" class="btn"}}
</div>
